const bts = document.querySelectorAll('.nav-btn');
const slides = document.querySelectorAll('.vid-slider');

var slider = function(manual) {
  bts.forEach(btn => btn.classList.remove('active'));
  slides.forEach(slide => slide.classList.remove('active'));

  bts[manual].classList.add('active');
  slides[manual].classList.add('active');
};

bts.forEach((btn, i) => {
  btn.addEventListener('click', () => {
    slider(i);
  });
});


